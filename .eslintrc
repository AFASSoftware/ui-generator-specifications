---
rules:
  indent:
  - error
  - 2
  quotes:
  - 2
  - single
  linebreak-style:
  - 2
  - unix
  semi:
  - 2
  - never
  no-unused-vars: 0
  no-cond-assign: 0
  no-console: 0
env:
  es6: true
  node: true
extends:
- eslint:recommended
- plugin:flowtype/recommended
plugins:
- flowtype
globals:
  NEXT: true
  LIB: true
  GENERATE: true
  SAMPLEDATA: true
